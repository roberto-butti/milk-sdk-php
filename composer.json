{
    "name": "rbit/milk-sdk-php",
    "version": "0.1.0",
    "description": "Package for consuming XYZ API from PHP",
    "keywords": [
        "rbit",
        "milk"
    ],
    "homepage": "https://github.com/rbit/milk",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Roberto",
            "email": "roberto.butti@gmail.com",
            "role": "Developer"
        }
    ],

    "autoload": {
        "psr-4": {"Rbit\\Milk\\": "src/Rbit/Milk"}
    },
    "autoload-dev": {
        "classmap": ["tests"]
    },
    "require": {
        "php": ">=7.4.0",
        "vlucas/phpdotenv": "^4.1",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit -c tests/phpunit.xml tests",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
